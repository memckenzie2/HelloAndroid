<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000733"
    >



    <ImageView android:id="@+id/logo"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:src="@drawable/udacity_logo_only"
        android:layout_margin="16dp"
        android:gravity="center"
        android:scaleType="centerInside"
        />

    <TextView android:id="@+id/udacity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="Udacity"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:textColor="#ced2e5"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/contact"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="2465 Latham St.\nMountain View, CA 94043\n650-555-5555\nwww.udacity.com"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="#ced2e5"
        android:layout_margin="8dp"
        android:gravity="center"
        />

    <ImageView android:id="@+id/arrows"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:scaleType="centerCrop"
        android:src="@drawable/security_3014154_1280"

        />

</LinearLayout>